@model Testimonial
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Testimonials</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Add Your Testimonial</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <label>Name Surname</label>
                            <input type="text" asp-for="NameSurname" class="form-control" />
                            <br />
                            <label>Title</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Image Url</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <label>Description</label>
                            <textarea rows="4" class="form-control" asp-for="Description"></textarea>
                            <br />
                            <button class="btn btn-primary">Add Testimonial</button>


                        </form>


                    </div>
                </div>


            </div>

        </div>
    </div>
</div>
