@model List<SocialMedia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">SocialMedias</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">SocialMedia List</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            You can show and rebuild your SocialMedias here !
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Url</th>
                                    <th scope="col">Icon</th>
                                  
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>                                                                   
                                        <td>@item.SocialMediaId</td>
                                        <td>@item.Title</td>
                                        <td>@item.Url</td>
                                        <td>@item.Icon</td>
                                        <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-danger">Delete</a></td>
                                        <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-success">Update</a></td>                                  
                                    </tr>

                                }

                            </tbody>
                        </table>
                        <a href="/SocialMedia/AddNewSocialMedia/" class="btn btn-info">Add New SocialMedia</a>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>
