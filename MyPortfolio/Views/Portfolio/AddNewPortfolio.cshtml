@model MyPortfolio.DAL_DataAccessLayer_.Portfolio
@{
    ViewData["Title"] = "AddNewPortfolio";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Portfolio</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Add Your New Portfolio Here !</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <label>Title</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Sub-Title</label>
                            <input type="text" asp-for="SubTitle" class="form-control" />
                            <br />
                            <label>URL</label>
                            <input type="text" asp-for="Url" class="form-control" />
                            <br />
                            <label>IMG-URL</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <label>Description</label>
                            <input type="text" asp-for="Description" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Add Portfolio</button>


                        </form>


                    </div>
                </div>


            </div>

        </div>
    </div>
</div>
