@model List<Testimonial>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Testimonials</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Testimonial List</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            You can show and rebuild your Testimonials here !
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Photo</th>
                                    <th scope="col">Name Surname</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">ImageUrl</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                    <tr>
                                        <td>@item.TestimonialId</td>
                                        <td style="border: 1px solid #000; border-radius: 10px; position: relative; width: 100px; height: 100px;">
                                            <img src="@item.ImageUrl" alt="Author image" class="testimonials__avatar" style="width: 100%; height: 100%; box-shadow: 0 0 0 0.9rem rgba(255, 255, 255, 0.1); border-radius: 50%; outline: none;">
                                        </td>



                                        <td>@item.NameSurname</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td><a href="/References/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Delete</a></td>
                                        <td><a href="/References/UpdateTestimonial/@item.TestimonialId" class="btn btn-success">Update</a></td>
                                    </tr>

                                    </tr>

                                }

                            </tbody>
                        </table>
                        <a href="/Testimonial/AddNewTestimonial/" class="btn btn-info">Add New Testimonial</a>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>
